<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>silo.pub</title>

    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css">
    <!-- Optional theme -->
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap-theme.min.css">
    <style>
      body {
        padding-top: 70px; padding-bottom: 40px;
      }
      .container {
        max-width: 960px;
      }
      form.signup {
        display: inline;
      }
      form.signup input[type="image"] {
        margin: 0.5em;
        vertical-align: middle;
        box-shadow: 2px 2px 4px rgba(0, 0, 0, 0.4);
      }
      form.signup input[type="image"]:hover {
        margin: 0.5em;
        vertical-align: middle;
        box-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8);
      }
    </style>
    {% block head %}
    {% endblock head %}
  </head>
  <body>
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">silo.pub</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li><a href="/">Home</a></li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>

    {% with messages = get_flashed_messages(with_categories=True) %}
      {% if messages %}
        <div class="container">
          {% for category, message in messages %}
            {% set alert_type = 'info' if category == 'message' else category %}
            <div class="alert alert-{{alert_type}}" role="alert">
              {{ message }}
            </div>
          {% endfor %}
        </div>
      {% endif %}
    {% endwith %}

    {% block body %}
    {% endblock body %}
    <!-- Latest compiled and minified JavaScript -->
    <script type="javascript" src="//code.jquery.com/jquery-2.1.1.min.js"></script>
    <script type="javascript" src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>

    {% block foot %}
    {% endblock foot %}
  </body>
</html>
